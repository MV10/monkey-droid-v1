<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:monkeydroid.Models"
             x:Class="monkeydroid.Views.UtilitiesPage"
             Title="Utilities">

    <ContentPage.BindingContext>
        <models:Utilities />
    </ContentPage.BindingContext>

    <VerticalStackLayout x:Name="contentLayout">
        
        <Label Text="{Binding ServerInfoHeader}"
               VerticalOptions="Center"
               HorizontalOptions="Center" />

        <Button Text="Delete cache" 
                MaximumWidthRequest="150"
                Clicked="DeleteCache_Clicked" />

    </VerticalStackLayout>
</ContentPage>